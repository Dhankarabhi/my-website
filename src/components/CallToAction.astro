---
import svgPinkStar from '../assets/pink-star.svg'
import Button from './Button.astro'
---

<section class="px-3 py-20 bg-gray-50" id="hire">
  <div class="max-w-3xl mx-auto bg-white text-center flex flex-col gap-6 border-3 shadow-[8px_8px_0px_rgba(0,0,0,0.3)] relative p-12 rounded-xl">
    
    <h1 class="text-3xl md:text-4xl font-bold">Letâ€™s Build Something Amazing Together</h1>
    
    <p class="text-lg md:text-xl max-w-lg mx-auto text-gray-700">
      Want to bring your ideas to life? Get in touch and let's create something remarkable.
    </p>
    
    <div class="flex flex-col sm:flex-row justify-center gap-4 mt-6">
      <Button 
        text="Send Me a Message" 
        link="mailto:abhishekchoudhary2440@gmail.com" 
        target="_blank" 
        class="w-full sm:w-auto transform transition-transform duration-300 hover:scale-105 hover:shadow-lg"
      />
      <Button 
        text="Visit My GitHub" 
        link="https://github.com/Dhankarabhi" 
        target="_blank" 
        class="w-full sm:w-auto transform transition-transform duration-300 hover:scale-105 hover:shadow-lg"
      />
      <Button 
        text="View My Resume" 
        link="/resume.pdf" 
        target="_blank" 
        class="w-full sm:w-auto bg-pink-500 text-white hover:bg-pink-600 shadow-lg transform transition-transform duration-300 hover:scale-105 hover:shadow-xl hover:resume-hover"
      />
    </div>
    
    <!-- Main pink star -->
    <img id="pink-star" src={svgPinkStar.src} alt="svg" width="80" class="absolute -top-10 right-8 md:right-20 transition-all duration-300 ease-in-out animate-bounce" />
    
    <!-- Optional additional stars -->
    <img src={svgPinkStar.src} alt="star" class="absolute top-5 left-10 w-6 h-6 transition-all duration-300 ease-in-out star-small" />
    <img src={svgPinkStar.src} alt="star" class="absolute top-1/2 right-2 w-5 h-5 transition-all duration-300 ease-in-out star-small" />
  </div>

  <style>
    /* Hover effect: main star moves closer and scales */
    .hover\\:resume-hover:hover ~ #pink-star {
      right: 4rem; /* Adjust distance to Resume button */
      transform: translateY(-10%) scale(1.05);
    }

    /* Optional: small stars react slightly */
    .hover\\:resume-hover:hover ~ #pink-star ~ .star-small {
      transform: translateY(-5%) scale(1.1) rotate(10deg);
    }

    /* Custom bounce for star (optional refinement) */
    @keyframes bounceResume {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      25% { transform: translateY(-8px) rotate(-10deg); }
      50% { transform: translateY(-12px) rotate(5deg); }
      75% { transform: translateY(-8px) rotate(-5deg); }
    }
  </style>
</section>
