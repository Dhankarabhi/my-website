---
import svgNew from '../assets/new.svg'

const achievements = [
  { 
    comment: `“Deployed a multi-node OpenStack cluster with automation”`,
    author: {
      name: `OpenStack Project`,
      pos: `Personal Project`,
      pic: `https://cdn-icons-png.flaticon.com/512/414/414927.png`
    },
    cls: `rotate-2 -translate-y-10`
   },
   { 
    comment: `“Built CI/CD pipelines for automated deployments”`,
    author: {
      name: `DevOps Automation`,
      pos: `Personal Project`,
      pic: `https://cdn-icons-png.flaticon.com/512/2910/2910760.png`
    },
    cls: `-rotate-2 -translate-x-10  z-5`
   },
   { 
    comment: `“Developed scalable web applications with modern frameworks”`,
    author: {
      name: `Web Projects`,
      pos: `Personal Project`,
      pic: `https://cdn-icons-png.flaticon.com/512/906/906175.png`
    },
    cls: `rotate-2 translate-x-5 z-5`
   },
   { 
    comment: `“Automated infrastructure provisioning using Terraform & Ansible”`,
    author: {
      name: `Infrastructure Automation`,
      pos: `Personal Project`,
      pic: `https://cdn-icons-png.flaticon.com/512/2910/2910785.png`
    },
    cls: `-rotate-2 translate-y-10 md:translate-y-15`
   },
]
---


<section>
    <div class="max-w-4xl mx-auto pb-20 px-10 overflow-hidden">
      <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="flex relative">
          <h1 class="text-3xl">Here’s what I’ve accomplished so far</h1>
          <img src={svgNew.src} alt="arrow" width="40" class="absolute -right-3 md:-right-10 bottom-0" />
        </div>
      </div>
  
  
      <div class="grid grid-cols-1 md:grid-cols-2 py-30">
        {achievements.map(item => ( 
          <div class={`flex flex-col gap-3 p-5 pr-15 bg-white border-2 shadow-[6px_6px_0px_rgba(0,0,0,0.3)] ${item.cls}`}>
            <p>{item.comment}</p>
            <div class="flex items-center gap-2">
              <div><div class="size-11 rounded-full border overflow-hidden">
                  <img src={item.author.pic} alt="" class="w-full h-full object-cover" />
              </div></div>
              <div>
                <h3 class="font-medium">{item.author.name}</h3>
                <p>{item.author.pos}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
  
    </div>
   </section>