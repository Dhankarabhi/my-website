---
import logoStar from '../assets/logo-star.svg'
import { author } from '../sample'

const socials = [
  { icon: 'ri-linkedin-fill', link: author.linkedin },
  { icon: 'ri-briefcase-line', link: author.naukri }, // Naukri / briefcase
  { icon: 'ri-twitter-x-line', link: author.x },
  { icon: 'ri-instagram-line', link: author.ig },
]
---

<footer class="border-t-4 px-5 md:px-0 py-10 mt-30">
  <div class="max-w-3xl mx-auto flex justify-center flex-col gap-5 md:gap-0 md:grid md:grid-cols-3 items-center">
    <!-- Logo & Name -->
    <div class="flex-1 font-bold">
      <a href="/" class="flex items-center gap-3 text-xl">
        <img src={logoStar.src} alt="logo" width="30" /> {author.nickname}
      </a>
    </div>

    <!-- Copyright -->
    <div class="text-center">
      <p>Â© {new Date().getFullYear()} {author.nickname}. All rights reserved.</p>
    </div>

    <!-- Social Icons -->
    <div class="flex md:justify-end gap-5 items-center">
      {socials.map(item => (
        <a href={item.link} target="_blank" class="transition-all duration-200 hover:translate-y-[2px] hover:text-blue-600">
          <i class={`${item.icon} text-2xl align-middle text-black`}></i>
        </a>
      ))}
    </div>
  </div>
</footer>
